@model IEnumerable<PetSuppliesPlus.Model.Store.StoreOptionModel>
    @{
        Layout = null;
    }
    @if (Model != null && Model.Count() > 0)
    {
        int counter = 0;
        foreach (var item in Model)
        {
            <tr>
                <td>@item.StoreId</td>
                <td>@item.StoreName</td>
                <td>@item.OptionName</td>
                <td>
                    <a href="@Url.Content("~/Admin/ManageStoreOption/Add/")@item.EncryptedID" title="edit"><img alt="edit" src="@Url.Content("~/Content/images/edit.png")"></a>
                    <a href="javascript:void(0);" onclick="removeStoreOption('@item.EncryptedID')" title="InActive"><img alt="delete" src="@Url.Content("~/Content/images/delete.png")"></a>
                </td>
            </tr>
            counter++;
        }
        <tr>
            <td colspan="10">
                @Html.Partial("DataPaging")
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td colspan="6">
                <span class="no-data">No record found.</span>
            </td>
        </tr>

    }
    <script>
    function removeStoreOption(eId) {

        if (confirm('Are you sure you want to delete this Store option?')) {
            var data = {
                id: eId
            };
            $.ajax({
                cache: false,
                url: '@Url.Action("DeleteStoreOption", "ManageStoreOption")',
                type: 'POST',
                data: JSON.stringify({ id: eId }),
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                success: function (data) {
                    alert(data.Message);
                    if (data.Status == 0) {
                        asynList();
                    }
                },
                error: function (data) {
                }

            });
        }
    }
    </script>
